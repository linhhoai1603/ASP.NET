@using Models
@model Cart

@{
    ViewData["Title"] = "Giỏ hàng";
}

<div class="container mt-5 p-3 rounded cart">
    <div class="row no-gutters">
        <div class="col-md-8">
            <div class="product-details mr-2">
                <div class="d-flex flex-row align-items-center"><i class="fa fa-long-arrow-left"></i><span class="ml-2" style="font-size: small; margin-left: 5px">Mua thêm sản phẩm khác</span></div>
                <hr>

                <h3 style="margin-right: 20px"><i class="fa-solid fa-cart-plus"></i> Giỏ Hàng </h3>

                @foreach (var item in Model.Items.Values)
                {
                    <div class="d-flex justify-content-between align-items-center mt-3 p-2 items rounded">
                        <div class="d-flex flex-row align-items-center" style="flex: 1;">
                            <img class="rounded" src="https://stcv4.hnammobile.com/uploads/products/colors/6/apple-iphone-12-pro-max-1-sim-128gb-cu-99-ll-01708505338.jpg" width="70">
                            <div class="ml-3">
                                <span class="font-weight-bold d-block" style="font-weight: bold">@item.Color.</span> <!-- Hiển thị tên màu -->
                                <span class="font-weight-bold d-block" style="font-size: 12px; color: gray;">Màu: @item.Color.ColorName</span>
                            </div>
                        </div>
                        <div class="d-flex flex-row align-items-center justify-content-end" style="flex: 1;">
                            <button class="btn btn-light btn-sm" onclick="decreaseQuantity(event, @item.TotalPrice)">-</button>
                            <span class="d-block mx-2 quantity">@item.Quantity</span>
                            <button class="btn btn-light btn-sm" onclick="increaseQuantity(event, @item.TotalPrice)">+</button>
                            <span class="d-block ml-5 font-weight-bold price" style="font-size: large">@item.TotalPrice.ToString("N0") + "đ"</span> <!-- Hiển thị tổng tiền -->
                            <i class="fa fa-trash text-danger ml-3" style="margin-left: 20px; width: 20px"></i>
                        </div>
                    </div>
                }

                <!-- payment -->

            </div>
        </div>
        <div class="col-md-4">
            <div class="payment-info">
                <div class="d-flex justify-content-between align-items-center"><span>Phương thức thanh toán</span></div>

                <hr class="line">
                <div class="d-flex justify-content-between information">
                    <span style="font-size: 14px">Sản phẩm:</span>
                    <span style="font-size: 16px" id="total-price">@Model.TotalPrice.ToString("N0") + "đ"</span> <!-- Hiển thị tổng giá trị sản phẩm -->
                </div>
                <div class="d-flex justify-content-between information">
                    <span style="font-size: 14px; font-weight: lighter">Phí vận chuyển tạm tính:</span>
                    <span style="font-size: 16px">0.000 VNĐ</span>
                </div>
                <div class="d-flex justify-content-between information">
                    <span style="font-size: 14px; font-weight: lighter">Cần thanh toán:</span>
                    <span style="font-size: 20px; font-weight: bold; color: #FF6F00 " id="final-price">
                        @Model.LastPrice.ToString("N0") + "đ" <!-- Hiển thị tổng giá cuối cùng -->
                    </span>
                </div>

                <hr class="line">
                <a class="btn btn-primary btn-block" type="button" style="background-color: #FF6F00; margin-top: 10px" href="@Url.Action("Payment", "Payment")">Tiếp tục</a>
            </div>
        </div>
    </div>
</div>
