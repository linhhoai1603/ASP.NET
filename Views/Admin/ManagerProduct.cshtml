@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Manage Products";
}
@model IEnumerable<ProjectDotNET.Models.Product>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Manage Products</h1>
    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addProductModal">
        <i class="bi bi-plus-circle"></i> Add Product
    </button>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered mt-4">
        <thead class="table-dark">
            <tr>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Unit Price</th>
                <th>Description</th>
                <th>Brand ID</th>
                <th>Category ID</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var product in Model)
                {
                    <tr>
                        <td>@product.ProductId</td>
                        <td>@product.ProductName</td>
                        <td>@product.UnitPrice</td>
                        <td>@product.Description</td>
                        <td>@product.BrandId</td>
                        <td>@product.CategoryId</td>
                        <td>
                            <img src="@product.ImgUrl ?? " /images/no-image.png"" alt="@product.ProductName" style="width: 50px; height: 50px;">
                        </td>
                        <td>
                            <button class="btn btn-info btn-sm view-product" data-product-id="@product.ProductId" title="View">
                                <i class="bi bi-eye"></i>
                            </button>
                            <button class="btn btn-warning btn-sm edit-product" data-product-id="@product.ProductId" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button class="btn btn-danger btn-sm delete-product" data-product-id="@product.ProductId" title="Delete">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8" class="text-center">No products found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal for Viewing a Product -->
<div class="modal fade" id="viewProductModal" tabindex="-1" aria-labelledby="viewProductModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="viewProductModalLabel">Product Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <strong>Product ID:</strong> <span id="viewProductId"></span><br>
                <strong>Product Name:</strong> <span id="viewProductName"></span><br>
                <strong>Unit Price:</strong> $<span id="viewUnitPrice"></span><br>
                <strong>Description:</strong> <span id="viewDescription"></span><br>
                <strong>Brand ID:</strong> <span id="viewBrandId"></span><br>
                <strong>Category ID:</strong> <span id="viewCategoryId"></span><br>
                <strong>Image:</strong><br>
                <img src="/images/product_a.jpg" alt="Product A" style="width: 100px; height: 100px;">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal for Editing a Product -->
<div class="modal fade" id="editProductModal" tabindex="-1" aria-labelledby="editProductModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editProductModalLabel">Edit Product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editProductForm">
                    <input type="hidden" id="editProductId">
                    <div class="mb-3">
                        <label for="editProductName" class="form-label">Product Name</label>
                        <input type="text" class="form-control" id="editProductName" required>
                    </div>
                    <div class="mb-3">
                        <label for="editUnitPrice" class="form-label">Unit Price</label>
                        <input type="number" class="form-control" id="editUnitPrice" required>
                    </div>
                    <div class="mb-3">
                        <label for="editDescription" class="form-label">Description</label>
                        <textarea class="form-control" id="editDescription" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="editBrandId" class="form-label">Brand ID</label>
                        <input type="number" class="form-control" id="editBrandId" required>
                    </div>
                    <div class="mb-3">
                        <label for="editCategoryId" class="form-label">Category ID</label>
                        <input type="number" class="form-control" id="editCategoryId" required>
                    </div>
                    <div class="mb-3">
                        <label for="editProductImage" class="form-label">Image URL</label>
                        <input type="text" class="form-control" id="editProductImage" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-warning" id="saveEditProduct">Save Changes</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal for Adding a Product -->
<div class="modal fade" id="addProductModal" tabindex="-1" aria-labelledby="addProductModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addProductModalLabel">Add New Product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="newProductName" class="form-label">Product Name</label>
                        <input type="text" class="form-control" id="newProductName">
                    </div>
                    <div class="mb-3">
                        <label for="newUnitPrice" class="form-label">Unit Price</label>
                        <input type="number" class="form-control" id="newUnitPrice">
                    </div>
                    <div class="mb-3">
                        <label for="newDescription" class="form-label">Description</label>
                        <textarea class="form-control" id="newDescription"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="newBrandId" class="form-label">Brand ID</label>
                        <input type="number" class="form-control" id="newBrandId">
                    </div>
                    <div class="mb-3">
                        <label for="newCategoryId" class="form-label">Category ID</label>
                        <input type="number" class="form-control" id="newCategoryId">
                    </div>
                    <div class="mb-3">
                        <label for="newProductImage" class="form-label">Product Image URL</label>
                        <input type="text" class="form-control" id="newProductImage">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success">Add Product</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal for Deleting a Product -->
<div class="modal fade" id="deleteProductModal" tabindex="-1" aria-labelledby="deleteProductModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteProductModalLabel">Delete Product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this product?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="deleteProductButton">Delete</button>
            </div>
        </div>
    </div>
</div>

<script>

      $(document).ready(function () {
    // Hàm hiển thị thông báo
    function showAlert(message, type) {
        const alertHtml = `
            <div class="alert alert-${type} alert-dismissible fade show" role="alert">
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>`;
        $('.alert-container').html(alertHtml);
    }

    // Xem chi tiết sản phẩm
    $('.view-product').on('click', function () {
        const productId = $(this).data('product-id');
        $.ajax({
            url: '/Admin/ViewProduct',
            type: 'GET',
            data: { productId },
            success: function (response) {
                if (response.success) {
                    const product = response.product;
                    $('#viewProductModal #viewProductId').text(product.ProductId);
                    $('#viewProductModal #viewProductName').text(product.ProductName);
                    $('#viewProductModal #viewUnitPrice').text(product.UnitPrice);
                    $('#viewProductModal #viewDescription').text(product.Description);
                    $('#viewProductModal #viewBrandId').text(product.BrandId);
                    $('#viewProductModal #viewCategoryId').text(product.CategoryId);
                    $('#viewProductModal img').attr('src', product.ImgUrl || '/images/no-image.png');
                    $('#viewProductModal').modal('show');
                } else {
                    showAlert(response.message, 'danger');
                }
            },
            error: function () {
                showAlert('Failed to fetch product details.', 'danger');
            }
        });
    });

    // Xóa sản phẩm
    $('.delete-product').on('click', function () {
        const productId = $(this).data('product-id');
        if (confirm('Are you sure you want to delete this product?')) {
            $.ajax({
                url: '/Admin/DeleteProduct',
                type: 'POST',
                data: { productId },
                success: function (response) {
                    if (response.success) {
                        showAlert(response.message, 'success');
                        location.reload(); // Làm mới danh sách
                    } else {
                        showAlert(response.message, 'danger');
                    }
                },
                error: function () {
                    showAlert('Failed to delete product.', 'danger');
                }
            });
        }
    });

    // Thêm sản phẩm
    $('#addProductButton').on('click', function () {
        const newProduct = {
            ProductName: $('#newProductName').val(),
            UnitPrice: $('#newUnitPrice').val(),
            Description: $('#newDescription').val(),
            BrandId: $('#newBrandId').val(),
            CategoryId: $('#newCategoryId').val(),
            ImgUrl: $('#newProductImage').val()
        };

        $.ajax({
            url: '/Admin/AddProduct',
            type: 'POST',
            data: newProduct,
            success: function (response) {
                if (response.success) {
                    showAlert('Product added successfully!', 'success');
                    location.reload();
                } else {
                    showAlert('Failed to add product: ' + response.message, 'danger');
                }
            },
            error: function () {
                showAlert('An error occurred while adding the product.', 'danger');
            }
        });
    });

    // Chỉnh sửa sản phẩm
    $('.edit-product').on('click', function () {
        const productId = $(this).data('product-id');
        $.ajax({
            url: '/Admin/ViewProduct',
            type: 'GET',
            data: { productId },
            success: function (response) {
                if (response.success) {
                    const product = response.product;
                    $('#editProductId').val(product.ProductId);
                    $('#editProductName').val(product.ProductName);
                    $('#editUnitPrice').val(product.UnitPrice);
                    $('#editDescription').val(product.Description);
                    $('#editBrandId').val(product.BrandId);
                    $('#editCategoryId').val(product.CategoryId);
                    $('#editProductImage').val(product.ImgUrl);
                    $('#editProductModal').modal('show');
                } else {
                    showAlert(response.message, 'danger');
                }
            },
            error: function () {
                showAlert('Failed to fetch product details.', 'danger');
            }
        });
    });

    // Lưu chỉnh sửa sản phẩm
    $('#saveEditProduct').on('click', function () {
        const updatedProduct = {
            ProductId: $('#editProductId').val(),
            ProductName: $('#editProductName').val(),
            UnitPrice: $('#editUnitPrice').val(),
            Description: $('#editDescription').val(),
            BrandId: $('#editBrandId').val(),
            CategoryId: $('#editCategoryId').val(),
            ImgUrl: $('#editProductImage').val()
        };

        $.ajax({
            url: '/Admin/EditProduct',
            type: 'POST',
            data: updatedProduct,
            success: function (response) {
                if (response.success) {
                    showAlert(response.message, 'success');
                    location.reload();
                } else {
                    showAlert(response.message, 'danger');
                }
            },
            error: function () {
                showAlert('Failed to update product.', 'danger');
            }
        });
    });
});


</script>