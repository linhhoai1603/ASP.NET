<!-- Modal for Adding a Product -->
<div class="modal fade" id="addProductModal" tabindex="-1" aria-labelledby="addProductModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addProductModalLabel">Add New Product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="newProductName" class="form-label">Product Name</label>
                        <input type="text" class="form-control" id="newProductName">
                    </div>
                    <div class="mb-3">
                        <label for="newUnitPrice" class="form-label">Unit Price</label>
                        <input type="number" class="form-control" id="newUnitPrice">
                    </div>
                    <div class="mb-3">
                        <label for="newDescription" class="form-label">Description</label>
                        <textarea class="form-control" id="newDescription"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="newBrandId" class="form-label">Brand ID</label>
                        <input type="number" class="form-control" id="newBrandId">
                    </div>
                    <div class="mb-3">
                        <label for="newCategoryId" class="form-label">Category ID</label>
                        <input type="number" class="form-control" id="newCategoryId">
                    </div>
                    <div class="mb-3">
                        <label for="newProductImage" class="form-label">Product Image URL</label>
                        <input type="text" class="form-control" id="newProductImage">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success">Add Product</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal for Deleting a Product -->
<div class="modal fade" id="deleteProductModal" tabindex="-1" aria-labelledby="deleteProductModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteProductModalLabel">Delete Product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this product?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="deleteProductButton">Delete</button>
            </div>
        </div>
    </div>
</div>
<script>
            $('#viewProductModal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget);
        var productId = button.data('product-id');
        $.ajax({
            url: '/Controller/ViewProduct',
            type: 'GET',
            data: { productId: productId },
            success: function(response) {
                if(response.success) {
                    $('#viewProductId').text(response.product.ProductId);
                    $('#viewProductName').text(response.product.ProductName);
                    $('#viewUnitPrice').text(response.product.UnitPrice);
                    $('#viewDescription').text(response.product.Description);
                    $('#viewBrandId').text(response.product.BrandId);
                    $('#viewCategoryId').text(response.product.CategoryId);
                    $('#viewProductImage').attr('src', response.product.ImgUrl); // Cập nhật URL ảnh
                }
            }
        });
    });

    $('#deleteProductButton').on('click', function() {
        var productId = $(this).data('product-id');
        $.ajax({
            url: '/Controller/DeleteProduct',
            type: 'POST',
            data: { productId: productId },
            success: function(response) {
                if(response.success) {
                    // Xử lý sau khi xóa thành công (cập nhật UI)
                }
            }
        });
    });
           $('#addProductButton').on('click', function() {
        var newProduct = {
            ProductName: $('#newProductName').val(),
            UnitPrice: $('#newUnitPrice').val(),
            Description: $('#newDescription').val(),
            BrandId: $('#newBrandId').val(),
            CategoryId: $('#newCategoryId').val(),
            ImgUrl: $('#newProductImage').val()
        };

        $.ajax({
            url: '/Controller/AddProduct',
            type: 'POST',
            data: newProduct,
            success: function(response) {
                if(response.success) {
                    // Cập nhật UI sau khi thêm thành công
                    location.reload(); // Làm mới trang để hiển thị sản phẩm mới
                }
            }
        });
    });

    });

</script>