@{
    ViewData["Title"] = "Thanh toán";
}
  <div class="container checkout-container">
    <h1 class="section-title mb-4">Thông tin khách hàng</h1>
    <form>
      <div class="row">
        <!-- Left Column -->
        <div class="col-md-6 mb-3">
          <strong class="form-label" for="fullName">Họ và tên (*)</strong>
          <input type="text" class="form-control" id="fullName" placeholder="Nhập họ và tên" required>
        </div>
        <div class="col-md-6 mb-3">
          <strong class="form-label" for="phone">Số điện thoại (*)</strong>
          <input type="text" class="form-control" id="phone" placeholder="Nhập số điện thoại thật" required>
        </div>
      </div>
  
      <div class="row">
        <div class="col-md-6 mb-3">
          <strong class="form-label" for="email">Email</strong>
          <input type="email" class="form-control" id="email" placeholder="Nhập email để nhận ưu đãi và hóa đơn VAT">
        </div>
        <div class="col-md-6 mb-3 form-check">
          <input type="checkbox" class="form-check-input" id="receiverCheck">
          <strong class="form-check-label" for="receiverCheck">Người khác nhận hộ</strong>
        </div>
      </div>
  
      <h2 class="section-title mt-4 mb-3">Phương thức nhận hàng</h2>
      <div class="mb-3">
        <select class="form-select" required>
          <option value="" disabled selected>Chọn phương thức nhận hàng</option>
          <option value="vat">Xuất hóa đơn VAT đối với hàng Công ty</option>
          <option value="delivery">Giao hàng miễn phí tận nơi</option>
          <option value="store">Nhận tại cửa hàng</option>
        </select>
      </div>
  
      <h2 class="section-title mt-4 mb-3">Địa chỉ nhận hàng</h2>
      <div class="row">
        <div class="col-md-6 mb-3">
          <strong class="form-label" for="city">Thành phố</strong>
          <input type="text" class="form-control" id="city" placeholder="Nhập thành phố">
        </div>
        <div class="col-md-6 mb-3">
          <strong class="form-label" for="district">Quận/Huyện</strong>
          <input type="text" class="form-control" id="district" placeholder="Nhập quận/huyện">
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 mb-3">
          <strong class="form-label" for="ward">Phường/Xã</strong>
          <input type="text" class="form-control" id="ward" placeholder="Nhập phường/xã">
        </div>
        <div class="col-md-6 mb-3">
          <strong class="form-label" for="address">Địa chỉ</strong>
          <input type="text" class="form-control" id="address" placeholder="Nhập địa chỉ">
        </div>
      </div>
      <div class="mb-3">
        <strong class="form-label" for="notes">Lưu ý của khách</strong>
        <textarea class="form-control" id="notes" rows="3" placeholder="Nhập lưu ý"></textarea>
      </div>
  
      <hr class="line">
  
      <h2 class="section-title mt-4 mb-3">Tổng đơn</h2>
      <div class="d-flex justify-content-between">
        <span>Sản phẩm</span>
        <span>11.990.000đ</span>
      </div>
      <div class="d-flex justify-content-between">
        <span>Phí vận chuyển</span>
        <span>0đ</span>
      </div>
      <div class="d-flex justify-content-between total-summary mt-3">
        <span>Cần thanh toán</span>
        <span style="color: #FF6F00">11.990.000đ</span>
      </div>
  
      <button type="submit" class="btn btn-warning mt-4 w-100">Thanh toán khi nhận hàng</button>
      <button type="submit" class="btn btn-primary mt-4 w-100">Chuyển khoản</button>
    </form>
  </div>
