@model Contact

@{
    ViewData["Title"] = "Liên hệ";
}

<div class="container contact-form">
    <div class="d-flex justify-content-center mb-4">
        <img src="https://image.ibb.co/kUagtU/rocket_contact.png" alt="rocket_contact" class="img-fluid" />
    </div>
    <form asp-action="Contact" method="post">
        <h2 class="text-center">Liên hệ với chúng tôi</h2>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group my-2">
                    <label for="FullName">Your Name *</label>
                    <input asp-for="FullName" class="form-control" placeholder="Your Name *" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group my-2">
                    <label for="Email">Your Email *</label>
                    <input asp-for="Email" class="form-control" placeholder="Your Email *" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group my-3">
                    <label for="Phone">Your Phone Number *</label>
                    <input asp-for="Phone" class="form-control" placeholder="Your Phone Number *" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group my-3">
                    <input type="submit" class="btn btn-primary w-100" value="Send Message" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="Message">Your Message *</label>
                    <textarea asp-for="Message" class="form-control" placeholder="Your Message *" style="height: 150px;"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <!-- Validation Scripts -->
    <partial name="_ValidationScriptsPartial" />
}
