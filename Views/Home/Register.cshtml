@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Ký</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>
    <a href="@Url.Action("Index", "Home")"> <- Quay lại trang Home</a>
    <div class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
        <div class="auth-container shadow-lg rounded p-4 p-sm-5 bg-white">
            <h2 class="auth-title text-center mb-4 text-primary">Đăng Ký</h2>
            <form class="auth-form" id="register-form" onsubmit="handleRegister(event)">
                <div class="form-group mb-3">
                    <label for="register-phone" class="form-label">Số điện thoại</label>
                    <input type="text" id="register-phone" name="phone" class="form-control" placeholder="Nhập số điện thoại" required>
                </div>
                <div class="form-group mb-3 position-relative">
                    <label for="register-password" class="form-label">Mật khẩu</label>
                    <input type="password" id="register-password" name="password" class="form-control" placeholder="Nhập mật khẩu" required>
                </div>
                <div class="form-group mb-3 position-relative">
                    <label for="confirm-password" class="form-label">Xác nhận mật khẩu</label>
                    <input type="password" id="confirm-password" name="confirmPassword" class="form-control" placeholder="Nhập lại mật khẩu" required>

                </div>
                <button type="submit" class="btn btn-primary w-100">Đăng ký</button>
            </form>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="js/signup.js"></script>
</body>

</html>

