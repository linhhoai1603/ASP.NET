@model ProjectDotNET.ViewModels.UserVM

@{
    ViewData["Title"] = "Thông Tin Người Dùng";
}

<div class="container mt-5">
    <h2 class="text-center text-primary">Thông Tin Cá Nhân</h2>
    <div class="card shadow-sm mt-4">
        <div class="card-body">
            <h4 class="card-title">@Model.FullName</h4>
            <p class="card-text"><strong>Email:</strong> @Model.Email</p>
            <p class="card-text"><strong>Số điện thoại:</strong> @Model.Phone</p>
            <p class="card-text"><strong>Địa chỉ:</strong> @Model.Address</p>
            <p class="card-text"><strong>Vai trò:</strong> @(Model.Role == 1 ? "Admin" : "User")</p>
        </div>
    </div>
    <div class="mt-4">
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Quay lại trang chủ</a>
    </div>
</div>
