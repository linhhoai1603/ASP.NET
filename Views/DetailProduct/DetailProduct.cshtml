@model ProjectDotNET.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}
<div class="container py-5">
    <main class="row g-4">
        <!-- Product Gallery -->
        <section class="col-md-6">
            <div id="productGallery" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img id="main-image" src="@Model.ImgUrl" class="d-block w-100" alt="@Model.ProductName">
                    </div>
                </div>
            </div>
        </section>

        <!-- Product Info -->
        <section class="col-md-6">
            <h1 class="fw-bold">@Model.ProductName</h1>
            <p class="h4 text-danger">@Model.UnitPrice.ToString("C")</p>
            <p>@Model.Description</p>
            <div class="d-flex gap-2 mt-4">
                <button class="btn btn-primary"><i class="fas fa-shopping-cart"></i> Add to Cart</button>
                <button class="btn btn-success">Buy Now</button>
            </div>
        </section>
    </main>

    <!-- Product Specifications -->
    <section class="mt-5">
        <h2>Specifications</h2>
        <table class="table">
            <tr>
                <th>RAM</th>
                <td>@Model.ProductSpecification?.Ram ?? "N/A"</td>
            </tr>
            <tr>
                <th>Resolution</th>
                <td>@Model.ProductSpecification?.Resolution ?? "N/A"</td>
            </tr>
            <tr>
                <th>Storage</th>
                <td>@Model.ProductSpecification?.StorageCapacity ?? "N/A"</td>
            </tr>
        </table>
    </section>
</div>


